<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WatchBook">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="left"
        >
        <ImageButton
            android:id="@+id/btnReturnBook"
            android:layout_width="64dp"
            android:layout_height="61dp"
            android:layout_gravity="left"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="?attr/selectableItemBackground"
            android:contentDescription="Back Button"
            android:src="@drawable/baseline_keyboard_backspace_24" />


        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageViewPortada"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/book_purple"
            />

        <TextView
            android:id="@+id/titulo_texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/almendra"
            android:text="Libro"
            android:textColor="@color/purple"
            android:textSize="40sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:clickable="true"
            android:focusable="true"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:visibility="visible"
            tools:visibility="visible" />



            <TextView
                android:id="@+id/autor_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif"
                android:layout_gravity="center"
                android:text="Autor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:clickable="true"
                android:focusable="true"
                android:ellipsize="end"
                android:visibility="visible"
                tools:visibility="visible" />
            <TextView
                android:autoLink="web"
                android:id="@+id/sinopsis_texto"
                android:fontFamily="sans-serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Sinopsis"
                android:textSize="20sp"
                android:visibility="visible"
                tools:visibility="visible" />



        <Button
            android:layout_gravity="center"
            android:backgroundTint="@color/salmon"
            android:layout_marginTop="20dp"
            android:id="@+id/ver_capitulos_btn"
            android:text="@string/ver_capitulos_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>>
</RelativeLayout>