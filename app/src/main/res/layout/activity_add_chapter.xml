<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/capitulo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddChapter">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/almendra"
                android:text="Capítulo"
            android:textColor="@color/salmon"
            android:textSize="40sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:visibility="visible" />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/Widget.Design.TextInputLayout"
            android:textColorHint="@color/grey"
            >

            <EditText
                android:paddingTop="20dp"
                android:id="@+id/namechapter"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_drive_file_rename_outline_24"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="  Nombre del Capítulo"
                android:inputType="text"
                android:visibility="visible" />
        </com.google.android.material.textfield.TextInputLayout> <com.google.android.material.textfield.TextInputLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        style="@style/Widget.Design.TextInputLayout"
        android:textColorHint="@color/grey"
        >

        <EditText
            android:id="@+id/num_cap"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/number_24"
            android:ems="10"
            android:fontFamily="sans-serif"
            android:hint="Número del Capítulo"
            android:inputType="text"
            android:visibility="visible" />

    </com.google.android.material.textfield.TextInputLayout>


    <TextView
            android:id="@+id/path"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text=""
            android:textSize="20sp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fontFamily="sans-serif"
            android:text="Subir audio"
            android:textSize="20sp"></TextView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/subir_audio_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            app:srcCompat="@drawable/baseline_file_upload_24" />

        <Button
            android:id="@+id/anadir_capitulo_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/salmon"
            android:fontFamily="sans-serif"
            android:text="@string/anadir_capitulo_btn" />


    </LinearLayout>
    </ScrollView>
</RelativeLayout>